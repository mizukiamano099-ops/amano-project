    /* ------------------------------------------
     * 以前の generator.js がある場合の互換性
     * （現在は src/cli/index.js が統合しているため基本不要）
     * ------------------------------------------ */
    "golden:generate": "node tests/golden/generator.js",
    "golden:test": "node tests/golden/runner.js"
  }
}
